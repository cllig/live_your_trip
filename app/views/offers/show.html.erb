<div class="container">
<div class ="offers">
<h1><%= @offer.title %></h1>

<p><%= @offer.city %></p></div>

<div id="carouselExampleIndicators" class="carousel slide" data-ride="carousel">
  <ol class="carousel-indicators">
  <% @offer.photos.each_with_index do |photo, index| %>
    <li data-target="#carouselExampleIndicators" data-slide-to="<%= "#{index}" %>" class="active"></li>
  <% end %>
  </ol>
  <div class="carousel-inner">
    <% @offer.photos.each_with_index do |photo, index| %>
    <div class="carousel-item carousel-img <%= index == 0 ? "active" : ""%> ">
        <%= cl_image_tag photo.key, crop: :fill, class: "d-block w-100", id: "slide#{index} " %>
    </div>
    <% end %>
  </div>
  <a class="carousel-control-prev" href="#carouselExampleIndicators" role="button" data-slide="prev">
    <span class="carousel-control-prev-icon" aria-hidden="true"></span>
    <span class="sr-only">Previous</span>
  </a>
  <a class="carousel-control-next" href="#carouselExampleIndicators" role="button" data-slide="next">
    <span class="carousel-control-next-icon" aria-hidden="true"></span>
    <span class="sr-only">Next</span>
  </a>
</div>



<div class="container d-flex">
  <div class="profile-user">
  <%= image_tag "traveller.png", class:"user-avatar" %>
  </div>
  <div class="user">
  <%= @offer.user.first_name %>
  <%= @offer.user.last_name  %>
  </div>

  <div class= "details">
  </div>
  <div class="description">
  <h2> <%= @offer.description %> </h2>
  </div>
  </div>

<div class ="reservations">

<%= link_to "Précédent", offers_path(@offers, :placenumber => @placenumber, :price =>@price, :theme => @theme, :city => @city), class: "kaki-btn" %>
<%= link_to "Réserver", new_offer_reservation_path(@offer, :placenumber => @placenumber), class: "orange-btn" %>

<%= link_to "edit", edit_offer_path, class: "orange-btn" %>

</div>
</div>

<%= render "reviews/reviewsform", offer: @offer, review: @review %>

<div class ="reviews">
<% @reviews.each do |review| %>
<h5><%= review.user.first_name %></h5>
<p><%= review.rating %></p>
<p><%= review.content %></p>
<% end  %>
</div>
