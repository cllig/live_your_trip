<div class='container'>
  <div class='container-chatroom'>
    <div class='chatroom-name'>
      <div class='each-chatroom-name'>
        <% @chatrooms.each do |chatroom| %>
          <%= link_to "#{chatroom.name}", chatroom_path(chatroom), class: "list-group-item #{'active' if chatroom == @chatroom}" %>
        <% end %>
        </div>
    </div>
        
    <div class='chatbox'>
      <div id="messages" class="box-messages" data-chatroom-id="<%= @chatroom.id %>">
        <% @chatroom.messages.each do |message| %>
          <%= render "messages/message", message: message, current_user: current_user %>
        <% end %>
      </div>
      <div class='message-form'>
        <%= simple_form_for [ @chatroom, @message ], remote: true do |f| %>
        <div class='input-message'>
          <%= f.input :content, label: false, placeholder: "Message ##{@chatroom.name}"%>
        </div>
        <div class='send-message'>
            <%= image_submit_tag("send.png") %>
          </div>
        <% end %>
      </div>
    </div>
  </div>
</div>
