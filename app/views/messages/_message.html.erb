<div class="message-container <%= message.user == current_user ? 'current-user-message' : '' %>" id="message-<%= message.id %>" >
  <i class="author">
    <span><%= message.user.first_name %></span>
    <small><%= message.created_at.strftime("%a %b %e at %l:%M%p") %></small>
  </i>
  <div class='background-messages'>
    <p><%= message.content %></p>
  </div>
</div>
