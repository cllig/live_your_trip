<%= simple_form_for [@offer, @review] do |f| %>
 <%= f.error_notification %>
  <%= f.error_notification message: f.object.errors[:base].to_sentence if f.object.errors[:base].present? %>

  <div class="form-inputs">

    <%= f.input :rating, label: 'Note'%>
    <%= f.input :content, label: 'Commentaire'%>
  </div>

  <div class="form-actions">

    <%= link_to "Cancel", offer_path(@offer), :class=>"btn kaki-btn btn-block" %>


    <%= f.button :submit, 'Envoyer', class:"btn orange-btn btn-block" %>

  </div>


<% end %>
