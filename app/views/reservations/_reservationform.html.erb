<%= simple_form_for [@offer, @reservation] do |f| %>
 <%= f.error_notification %>
  <%= f.error_notification message: f.object.errors[:base].to_sentence if f.object.errors[:base].present? %>

<div class="row">
<div class="reservation-form">
  <div class="reservation-input col-8">

    <h3 class="titre">Réservez votre activité avec <%= @offer.user.first_name %> !</h3>

    <%= f.input :arrival, as: :date, html5: true, label: 'Date de départ'%>
    <%= f.input :start_hour, label: 'Heure de départ'%>
    <%= f.input :finish_hour, label: 'Heure de fin'%>
    <%= f.input :participant, label: 'Nombre de participants', placeholder: @placenumber %>

    <%= link_to "Annuler", offer_path(@offer), :class=>"btn kaki-btn" %>


    <%= f.button :submit, 'Réserver', class:"btn orange-btn" %>
  </div>
</div>


<div class="travel-gif">
  <%= image_tag url = "https://monophy.com/media/dZ4Ch8olLYVqPXvNVR/monophy.gif" %>
  </div>
</div>




<% end %>
