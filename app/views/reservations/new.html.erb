<%= simple_form_for [@offer, @reservation] do |f| %>
 <%= f.error_notification %>
  <%= f.error_notification message: f.object.errors[:base].to_sentence if f.object.errors[:base].present? %>

  <div class="form-inputs">
    <%= f.input :arrival%>
    <%= f.input :departure%>
    <%= f.input :participant, placeholder: @placenumber %>
  </div>

  <div class="form-actions">
    <%= link_to "Cancel", offer_path(@offer), :class=>"btn kaki-btn" %>
    <%= f.button :submit, :class=>"btn orange-btn" %>
    
    
  </div>
  

<% end %>





